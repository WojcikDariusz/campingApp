<% include partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Witaj na liście kempingów</h1>
            <p>Wybierz twój ulubiony kemping z setek kempingów na całym świecie</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-md">Dodaj nowy kemping</a>
            </p>
        </div>
    </header>

<div class="row d-flex flex-wrap justify-content-start">

   
         <% campgrounds.forEach(function(campground) { %>

             <div class="col-md-3 col-sm-6">
               
                <div class="thumbnail">
                    <div class="caption">
                        <h4>
                            <%= campground.name %>
                        </h4>    
                    </div>
                 
                    <img src=" <%= campground.image %> " style="width:100%" >
                 </div>
             </div>
       
         <% }); %>
   
</div>
</div>

    <div class="centerElement" id="backButton">
          <a href="/" class="btn btn-info btn-sm btn-block">Powrót na stronę główną</a>
    </div>

<% include partials/footer.ejs %>